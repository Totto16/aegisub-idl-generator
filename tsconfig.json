{
	"include": ["src/"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "es2022",
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": ["es2021"],
		"rootDir": "src/",
		"outDir": "build",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"rules": {
		"triple-equals": true,
		"curly": true,
		"strict-boolean-expressions": true,
		"no-unnecessary-condition": true
	}
}
